<% layout("layout/boilerplate") %>

<link rel="stylesheet" href="css/signup.css">

<div class="logo"></div>
    <div class="container">
        <h1>Sign Up for Financial Freedom</h1>
        <div class="form-section">
            <div class="formimg">
                <img src="images/Happy Bunch - Desk.png" alt="form-img">
            </div>
            <form action="/register" method="POST">
                <label for="username">First Name:</label>
                <input type="text" name="fname" id="username" required>

                <label for="username">Last Name:</label>
                <input type="text" name="lname" id="username" required>

                <label for="username">Username:</label>
                <input type="text" name="username" id="username" required>

                <label for="email">Email:</label>
                <input type="email" name="email" id="email" required>

                <label for="password">Password:</label>
                <input type="password" name="password" id="password" required>


                <div class="form-cta">
                    <button type="submit" class="btn-primary">Create Account</button>
                    <a href="#" class="link">Forgotten Password?</a>
                </div>

            </form>
        </div>
    </div>